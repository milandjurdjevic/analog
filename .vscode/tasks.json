{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/analog.slnx"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/tests/Analog.Tests/Analog.Tests.fsproj"
      ],
      "group": "test"
    },
    {
      "label": "format",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "fantomas",
        "${workspaceFolder}"
      ],
      "group": "none"
    }
  ]
}
